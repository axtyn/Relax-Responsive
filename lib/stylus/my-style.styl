/* Botonera */
.bottom-header
	position relative
	margin-top 15px
	padding-right 10px
	padding-left 10px
  	min-height 49px
	
.header-bottom
	background-color #fff
	position absolute
	z-index 1000
	top -24px
	width 100%
	box-shadow 0 0 4px rgba(164,164,164,.5)

.bottom-head
	text-align center
	border-right 1px solid #EBEBEB
	padding 0
	float left
	width 11%
	
	& a
		text-decoration none
		display block
		height 70px
		position relative
		transition 0.5s all
		-webkit-transition 0.5s all
		-o-transition 0.5s all
		-moz-transition 0.5s all
		-ms-transition 0.5s all
	
	& h6
		display none
		/*
		font-size 1em
		color #919090
		font-family 'Montserrat-Regular'
		margin 0.5em 0 0
		*/
.bottom-head:nth-child(7)
	border-right none

.bottom-head a:hover .buy-media
	height 50px
	padding 14px 2px
	transition 0.5s all
	-webkit-transition 0.5s all
	-o-transition 0.5s all
	-moz-transition 0.5s all
	-ms-transition 0.5s all
	width 100%
	background-color #fff
	position absolute
	bottom 0
	left 0

.bottom-head a:hover
	color #27da93

.bottom-header
	position relative

.bottom-head a:hover .buy-media
	height 100px

.buy-media
	position absolute
	bottom 0
	height 50px
	padding 14px 2px
	overflow hidden
	width 100%
	background-color #fff
	-webkit-transform translate3d(0, 0, 0)
	transform translate3d(0, 0, 0)
	-webkit-transition -webkit-transform .2s ease,height .2s ease
	-moz-transition -moz-transform .2s ease,height .2s ease
	-o-transition -o-transform .2s ease,height .2s ease
	transition transform .2s ease,height .2s ease

