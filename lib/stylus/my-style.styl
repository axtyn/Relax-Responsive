@import 'normalize.styl'

/*Paleta de Colores*/
$relax_oro = #b60050
$relax_azul = #00457C
$relax_oro = #ED9512
$gris = #d1d1d1
$negro-ox = #333
$blanco = #fff
$naranja = #FF7F31
$rosa = #F44CA6

$url-relax = "http://www.revistarelax.com/images/"


/* Fuentes */
@font-face
	font-family 'Montserrat-Regular'
	src url(../fonts/Montserrat-Regular.ttf) format('truetype')

@font-face
	font-family 'Oxygen-Regular'
	src url(../fonts/Oxygen-Regular.ttf) format('truetype')

/* Inicia Estilo */
html,body
	background #fff
	font-size 16px
	font-family 'Oxygen-Regular'   

body a
	transition 0.5s all
	-webkit-transition 0.5s all
	-o-transition 0.5s all
	-moz-transition 0.5s all
	-ms-transition 0.5s all

h1,h2,h3,h4,h5,h6,label,p
	margin 0

ul
	padding 0
	margin 0
	list-style none

/*---- Header ---*/
header
	width 100%
	height 110px
	background-color $relax_azul
	
/*-- Navegacion --*/
.pull
	display none

.navigation
	background-color black
	display fixed
	top 0px

nav ul
	padding 0px
	margin 20px 0px

.navigation nav ul li
	text-transform uppercase
	text-align center

.navigation nav ul li a
	color white
	font-size  1.8rem !important
	font-family 'Oxygen-Regular'
	font-weight 400
	transition all 0.5s ease
	-moz-transition all 0.5s ease
	-webkit-transition all 0.5s ease
	-o-transition all 0.5s ease
	display block

.navigation nav ul li a:hover  
	color $relax_oro
	background-color $gris
	text-decoration none
	font-weight 700

/*-- Cabecera --*/
.title
	font-size 1.3rem
	text-align center
	margin 0px auto
	font-family 'Montserrat-Regular'
	color white
.logo
	margin 10px 0px
	text-align center
	
.logo img
	width 40%

.nav_slide_button, .nav_slide_button a, .nav_slide_button a:visited
	color $relax_oro
	position absolute
	top 30px
	right 10px

.nav_slide_button a:hover
	color white

.magazine-button
	color $relax_oro
	position absolute
	top 55px
	left 30px

/*--- Slider --*/
.slider 
	position relative
	background-color $gris
	height 220px

.rslides 
	position relative
	list-style none
	overflow hidden
	width 100%
	height 220px
	padding 0
	margin 0
	z-index 100

.rslides li 
	-webkit-backface-visibility hidden
	position absolute
	display none
	width 100%
	height 220px
	left 0
	top 0

.rslides lifirst-child 
	position relative
	display block
	float left

.rslides img 
	display block
	float left
	width 100%
	border 0

.callbacks_tabs a:after 
	content "\f111"
	font-size 0
	font-family FontAwesome
	visibility visible
	display block
	height 12px
	width 12px
	display inline-block
	background $relax_azul
	border-radius 50px

.callbacks_here a:after
	background white

.callbacks_tabs a
	visibility hidden

.callbacks_tabs li
	display inline-block

ul.callbacks_tabs.callbacks1_tabs 
	position absolute
	bottom 10px
	z-index 999
	right 5%

.caption
	position absolute
	bottom 0px
	left 10%
	color $relax_azul
	margin-top -10px

.caption h3
	font-size 1.5rem
	display inline-block
	font-family 'Montserrat-Regular'

.caption h3 span
